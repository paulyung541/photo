<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.paulyung.pyphoto"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:name=".BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.paulyung.pyphoto.PYGlideModule"
            android:value="GlideModule" /> <!-- Glide初始化配置 -->
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.PhotoListActivity"/>
        <activity android:name=".activity.ImageWatchActivity"
            android:theme="@style/ImageWhathTheme"/>
    </application>

</manifest>